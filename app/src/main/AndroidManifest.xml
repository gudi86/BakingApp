<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.gustavo.bakingapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".listrecipes.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".masterrecipe.MasterStepDetailActivity" />
        <activity android:name=".masterrecipe.stepdetailrecipe.StepDetailActivity"
            android:configChanges="orientation"/>

        <provider
            android:name=".data.source.database.BakingContentProvider"
            android:authorities="br.com.gustavo.baking"
            android:exported="false" />

        <receiver android:name=".listingredientwidget.IngredientWidget" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <meta-data android:name="android.appwidget.provider"
                android:resource="@xml/ingredient_widget_info" />
        </receiver>

        <service android:name=".listingredientwidget.IngredientService" />

        <service android:name=".listingredientwidget.ListWidgetService"
            android:permission="android.permission.BIND_REMOTEVIEWS"
            android:exported="false" />

    </application>

</manifest>