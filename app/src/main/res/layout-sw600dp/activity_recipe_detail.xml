<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="br.com.gustavo.bakingapp.recipelist.MainActivity">

    <fragment
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/list_step_detail"
        android:name="br.com.gustavo.bakingapp.masterrecipe.recipesteplist.RecipeStepListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"/>

    <FrameLayout
        android:id="@+id/fl_container_step_detail"
        android:name="br.com.gustavo.bakingapp.masterrecipe.stepdetailrecipe.StepDetailFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"/>

</LinearLayout>
